<%= form_for @message, url: contact_path, :html => { :class => 'form-horizontal' } do |m| %>
    <div class="form-group">
      <%= m.label :subject, '*Subject:', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= m.text_field :subject, placeholder: "Your subject here...", :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= m.label :name, '*Name and surname:', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= m.text_field :name, placeholder: "Your name and surname here...", :class => 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= m.label :email, '* Your e-mail:', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
       <%= m.email_field :email, placeholder: "Your e-mail address here...", :class => 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= m.label :content, '*Your message:', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= m.text_area :content, placeholder: "What do you want to ask for? :)", :class => 'form-control' %>
      </div>
    </div>
  
  
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= m.submit :value => "Send message!", :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>

<%= render 'layouts/links' %>

</div>